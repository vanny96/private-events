<h1>Host a Party!</h1>
<%= form_for @party do |f|%>
  <% if @party.errors.any? %>
    <ul>
      <% @party.errors.full_messages.each do |message| %>
        <li><%= message%></li>
      <%end%>
    </ul>
  <%end%>

  <%= f.label :name %><br>
  <%= f.text_field :name%><br>

  <%= f.label :body %><br>
  <%= f.text_field :body%><br>

  <%= f.label :location %><br>
  <%= f.text_field :location%><br>

  <%= fields_for :datetime do |datetime| %>
    <%= datetime.label :date %>
    <%= datetime.date_field :date %><br>

    <%= datetime.label :time %>
    <%= datetime.time_field :time %><br>
  <%end%>

  <%= f.submit%>
<%end%>
